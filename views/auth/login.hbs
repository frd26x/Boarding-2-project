
<form action="/auth/login" method="POST" id="form-container" class="containerform">

  <div class="headerform">Login</div>
  <input id="username" type="text" name="username" placeholder="Username" class='texts'>

  <br><br>

  <input id="password" type="password" name="password" placeholder="Password" class='passw'>
  <br>
  {{#if message }}
  <div class="error-message">
    <pre>{{ message }}</pre>
  </div>
  {{/if}}

  <br><br>

  <button>Login</button>

  <div class="account-message">
    <p> Don't have an account yet?</p>
    <a href="/auth/signup">Signup</a>
  </div>
</form>