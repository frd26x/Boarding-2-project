<div class="row justify-content-center" style="height:100vh">
  <div class="col-4">
    <h2 class="text-center pt-5">Login</h2>
    <div class="card">
      <div class="card-body">
        <form action="/auth/login" method="POST" id="form-container">
          <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Username">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <div class="text-center">
            <button class="btn btn-primary">login</button>
          </div>
          <div class="text-center pt-3">
            <p class="account-message">
              Don't have an account yet?
              <a href="/auth/signup">Signup</a>
            </p>
          </div>
          {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>

<form action="/auth/login" method="POST" id="form-container" class="containerform">

  <div class="headerform">Login</div>
  <input id="username" type="text" name="username" placeholder="Username" class='texts'>

  <br><br>

  <input id="password" type="password" name="password" placeholder="Password" class='passw'>
  <br>
  {{#if message }}
  <div class="error-message">
    <pre>{{ message }}</pre>
  </div>
  {{/if}}

  <br><br>

  <button>Login</button>

  <div class="account-message">
    <p> Don't have an account yet?</p>
    <a href="/auth/signup">Signup</a>
  </div>
</form>